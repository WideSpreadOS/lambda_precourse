<style>
    #mainMenu {
        display: none;
    }
    body {
        font-family: 'Exo 2', sans-serif;
    padding: 0;
    margin: 0;
    background: #000;
    color: #fff;
    max-width: 100vw;
    overflow-x: hidden;
}


/* #mainHeader */

/* Main Container */
.container {
    background: #333;
    background-image: url("https://4.bp.blogspot.com/-Px99__SAlNY/V0zUPjSoZhI/AAAAAAAAGMI/FmpAbDjhdXEoxRJIPjrVcBPsdxQx-_IGwCKgB/s1600/red-black-white-abstract-wallpaper.jpg");
    background-size: cover;
    backdrop-filter: blur(8px);
    position: fixed;
    top: 100px;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    width: 100vw;
    max-width: 100vw;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: scroll;
    padding: 10px;

}
</style>

<h1><%= title %></h1>

<div class="login">
    <form action="/users/login" method="POST">
        <div class="input-group">
            <label for="email" style="color: #fff">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="input-control login-input"
              placeholder="Enter your email"
              />
        </div>

        <div class="form-group">
            <label style="color: #fff" for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Enter your password"
              />
        </div>

        <button type="submit">Login</button>
    </form>
</div>