    position: fixed;
    top: 100px;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    width: 100vw;
    max-width: 100vw;
    min-height: 100vh;
    overflow-x: hidden;
    overflow-y: scroll;
    padding: 10px;

}

.login {
    width: 50%;
    margin-left: 25%;
    margin-top: 100px;
    border-radius: 8px;
}
.login form {
    width: 90%;
    margin-left: 5%;
    text-align: center;
}
.input-group {
    padding: 5px;
    text-align: center;
}
.input-group label {
    margin-right: 20px;
}
.input-group input {
    border-radius: 4px;
    outline: none;
    border: none;
    padding: 5px;
}
.login button {
    background: rgba(220, 20, 60, 0.5);
    border: none;
    outline: none;
    padding: 10px;
    font-size: 1.5rem;
    color: #fff;
    margin-top: 30px;
    border-radius: 6px;
    cursor: pointer;
}
</style>

<div class="page-title">
    <h1><%= title %></h1>
</div>

<div class="login glass frosted-glass">
    <form action="/users/login" method="POST">
        <div class="input-group">
            <label for="email" style="color: #fff">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="input-control login-input"
              placeholder="Enter your email"
              />
        </div>

        <div class="form-group">
            <label style="color: #fff; margin-right: 20px;" for="password">Password</label>
            <input
                style=" border-radius: 4px; padding: 5px; outline: none; border: none;"
              type="password"
              id="password"
              name="password"
              placeholder="Enter your password"
              />
        </div>

        <button type="submit">Login</button>
    </form>
</div>


<div class="link-tray">
    <p>Need an account? <a href="/users/register">Register Here</a></p>
</div>