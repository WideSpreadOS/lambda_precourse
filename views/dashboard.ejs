<style>
    h1 {
        color: #1b212c;
    }

    #userFriendList {
        background-image: linear-gradient(to bottom right, #ddd , #eee, #fff);
        max-width: 315px;
        padding: 25px;
        border-radius: 12px;
        margin-top: 30px;
