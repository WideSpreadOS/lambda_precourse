        backdrop-filter: blur(4px);
        margin-bottom: 20px;
        border-top-left-radius: 50px;
        border-bottom-left-radius: 50px;
        padding-left: 4px;
        display: inline-flex;
    }
    .friend-image {
        max-width: 100px;
        width: 100px;
    }
    .friend-image img {
        width: 100px;
        height: 100%;
        border-radius: 50%;
    }
    .friend-data {
        width: 165px;
        max-width: 175px;
        height: 80px;
        margin-top: 7px;
        margin-left: 15px;
        padding: 5px;
        text-align: right;
        background-image: linear-gradient(to bottom, #eee, #fff);
    }
    .friend-data h5 {
        margin-block-start: 5px;
        padding: 8px;
        padding-top: 2px;
        font-size: 1rem;
    }

</style>


